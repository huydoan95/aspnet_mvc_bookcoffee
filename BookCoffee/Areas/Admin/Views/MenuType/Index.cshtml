@model IEnumerable<Models.EF.MenuType>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    <h1>Danh sách các MenuType </h1>
}
@section scriptNest{
    <script src="~/Assets/Admin/js/MenuTypeController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/MenuType/CreateMenuType">
                    <i class="fa fa-plus-square" aria-hidden="true">
                        Tạo mới
                    </i>

                </a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã MenuType </th>
                            <th>Tên loại Menu</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;
                            foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@i</td>
                                    <td>@item.ID</td>
                                    <td style="width:50%">@item.Name</td>
                                    <td><a href="#" class="menuTypesStatus" data-id="@item.ID" title="Click để đổi trạng thái">@(item.status ? "Sử dụng" : "Không sử dụng")</a></td>
                                    <td style="width:18%">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                        <a href="/Admin/MenuType/UpdateMenuType/@item.ID">Sửa</a>
                                    </td>
                                </tr>
                                i++;
                            }

                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


