@model IEnumerable<Models.EF.Publisher>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    <h1> Danh sách nhà xuất bản</h1>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/Publisher/CreatePublisher">
                    <i class="fa fa-plus-square" aria-hidden="true">
                        Tạo mới
                    </i>

                </a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên nhà xuất bản </th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Trạng thái</th>
                            <Th>Thao tác</Th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int i = 1;
                            foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td style="width:5%">@i</td>
                                    <td style="width:25%">@item.Name</td>
                                    <td style="width:15%">@item.Phone</td>
                                    <td style="width:10%">@item.Email</td>
                                    <td style="width:10%">@item.Address</td>
                                    <td style="width:10%">
                                        <a href="#" class="PublisherChangeStatus" data-id="@item.ID" title="Click để đổi trạng thái">@(item.status ? "Đang sử dụng" : "Không sử dụng")  </a>
                                    </td>
                                    <td style="width:18%">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                        <a href="/Admin/Publisher/UpdatePublisher/@item.ID">Sửa</a>

                                    </td>
                                </tr>
                                i++;
                            }

                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
@section scriptNest{
    <script src="~/Assets/Admin/js/PublisherController.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Tất cả"]],
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ Dòng"
                }
            });
        });
    </script>
}
