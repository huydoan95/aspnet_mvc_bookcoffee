<div id="imageManage" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chọn hình cho sản phẩm</h4>
            </div>

            <div class="modal-body">
                <div class="imageList">

                </div>
                <input type="button" id="btnChooseImage" class="btn btn-primary" value="Chọn ảnh" />
                <input type="hidden" id="hidProductID" value="0" />
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="btnSaveImage">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


