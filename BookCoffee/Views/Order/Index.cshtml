@model Models.ViewModels.OrderModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scriptNest{
    <script type="text/javascript">
        $('#txtDatePicker').datepicker(
              {
                  dateFormat: 'yy/mm/dd',
                  changeMonth: true,
                  changeYear: true,
                  yearRange: '1950:2100'
              });
    </script>
}
<div class="three-space"></div>
<div class="l-order">
    <div class="container">
        <div class="mod-order bg" style="background-image: url(/Assets/Client/images/img35.jpg)">
            <div class="row row-30">
                <!--Form nhập thông tin đăng ký-->
                <div class="col-sm-7 col-left">
                    <div class="form-order">
                        <div class="header-order">
                            <h2>Đặt bàn trước</h2>
                        </div>
                        @using (Html.BeginForm("Index", "Order", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="row" style="text-align:center;">
                                    <div class="col-sm-12">
                                        @Html.ValidationMessage("OrderTableErr")
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="">HỌ VÀ TÊN</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control">*@
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="">email</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control">*@
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="">Số điện thoại</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                                        @*<input type="text" class="form-control">*@
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="">ngày đặt hẹn</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="date-input ps-rv">
                                            @Html.TextBoxFor(model => model.HoldDate, new { @class = "form-control", @id = "txtDatePicker" })
                                            @Html.ValidationMessageFor(model => model.HoldDate, "", new { @class = "text-danger" })
                                            @*<input type="text" class="form-control" id="datepicker2">*@
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="">Số người</label>
                                    </div>
                                    <div class="col-sm-3">
                                        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                        @*<input type="number" class="form-control">*@
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <label for="">ghi chú</label>
                                    </div>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.Remark, new { @class = "form-control", @rows = 10 })
                                        @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                                        @*<textarea name="" id="" cols="30" rows="5" class="form-control"></textarea>*@
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-pink">Đặt bàn</button>
                                @*<a href="#" class="btn btn-pink" title="Đặt bàn">Đặt bàn</a>*@
                            </div>
                        }
                    </div>
                </div>

                <!--Thông tin về quán cafe sách-->
                <div class="col-sm-5 col-right">
                    <div class="mod-address bg-pink color-white">
                        <h3>thông tin liên hệ</h3>
                        <div class="row row-8">
                            <div class="col-xs-5">
                                <label for="">Điện thoại</label>
                            </div>
                            <div class="col-xs-7">
                                092.123.456
                            </div>
                        </div>
                        <div class="row row-8">
                            <div class="col-xs-5">
                                <label for="">Email</label>
                            </div>
                            <div class="col-xs-7">
                                bookcoffee.vn@gmail.com
                            </div>
                        </div>
                        <div class="row row-8">
                            <div class="col-xs-5">
                                <label for="">Địa chị</label>
                            </div>
                            <div class="col-xs-7">
                                Tố 131, đường 30/4, tp.TDM, tỉnh Bình Dương
                            </div>
                        </div>
                        <h3>Mạng xã hội</h3>
                        <div class="row row-8">
                            <div class="col-xs-5">
                                <label for="">Facebook</label>
                            </div>
                            <div class="col-xs-7">
                                fb.com/bookcoffeevn
                            </div>
                        </div>
                        <div class="row row-8">
                            <div class="col-xs-5">
                                <label for="">twitter</label>
                            </div>
                            <div class="col-xs-7">
                                twitter.com/bookcoffeevn
                            </div>
                        </div>
                        <div class="row row-8">
                            <div class="col-xs-5">
                                <label for="">Địa chị</label>
                            </div>
                            <div class="col-xs-7">
                                Tố 131, đường 30/4, tp.TDM, tỉnh Bình Dương
                            </div>
                        </div>
                        <h3>Liên kết nhanh</h3>
                        <p>
                            <a href="#" title="Hướng dẫn sử dụng website">Hướng dẫn sử dụng website</a> <br>
                            <a href="#" title="Hỏi đáp nhanh">Hỏi đáp nhanh</a> <br>
                            <a href="#" title="Cơ hội việc làm">Cơ hội việc làm</a> <br>
                            <a href="#" title="Đăng quảng cáo">Đăng quảng cáo</a>
                        </p>
                    </div>
                </div>
                <!--./Thông tin về quán cafe sách-->
            </div>
        </div>
    </div>
    <div class="ten-space"></div>
    <div class="ten-space"></div>
</div>
