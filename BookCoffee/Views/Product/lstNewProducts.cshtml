@model IEnumerable<Models.EF.Product>
<div class="l-list-book">
    <div class="headline"></div>
    <h2>Thực đơn món mới</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            string url = "/cac_mon_moi/" + item.MetaTitle + "-" + item.ID;
            <div class="col-md-4 col-sm-6">
                <div class="thumnail-book-v2 ps-rv">
                    <div class="box-img">
                        <img src="@item.Image" alt="img" class="square_images">
                    </div>
                    <div class="box-text">
                        <div class="table-div">
                            <div class="table-cell">
                                <h3>@item.Name</h3>
                                <a href="@url" title="Chi tiết" class="btn btn-border">Chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
